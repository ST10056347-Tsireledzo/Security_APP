<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Services">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Semi-transparent view for background blur -->
            <View
                android:id="@+id/backgroundBlur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:visibility="gone" />

            <!-- First CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/service1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:elevation="12dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                android:layout_gravity="center_horizontal"> <!-- Center horizontally -->

                <!-- ConstraintLayout for the first CardView -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#304FFE"> <!-- Changed to wrap_content -->

                    <!-- ImageView -->
                    <ImageView
                        android:id="@+id/image_view"
                        android:layout_width="126dp"
                        android:layout_height="95dp"
                        android:src="@drawable/secure6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="visible" /> <!-- Initially visible -->

                    <!-- TextView for title -->
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Installation Of CCTV"
                        android:textAllCaps="true"
                        android:textColor="#FF8BC34A"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/image_view"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="16dp" />

                    <!-- TextView for hidden text -->
                    <TextView
                        android:id="@+id/hiddenTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="At Muramba Security &amp; Solutions, we recognize the paramount importance of a robust and reliable CCTV system in todayâ€™s security landscape. With the evolving complexities of security challenges, our dedicated team specializes in the meticulous installation of state-of-the-art CCTV solutions tailored to meet your specific needs. Leveraging cutting-edge technology and industry best practices, we ensure seamless integration and optimal functionality of your surveillance infrastructure. Our commitment extends beyond mere installation; we prioritize user-friendly interfaces, high-definition clarity, and comprehensive coverage to provide you with peace of mind."
                        android:textColor="#FF000000"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/textView4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="16dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <!-- Second CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/service2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:elevation="12dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                android:layout_gravity="center_horizontal">

                <!-- ConstraintLayout for the second CardView -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#304FFE"> <!-- Changed to wrap_content -->

                    <!-- ImageView -->
                    <ImageView
                        android:id="@+id/image_view2"
                        android:layout_width="126dp"
                        android:layout_height="95dp"
                        android:src="@drawable/secure14"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="visible" /> <!-- Initially visible -->

                    <!-- TextView for title -->
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Body Guard Services"
                        android:textAllCaps="true"
                        android:textColor="#FF8BC34A"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/image_view2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="16dp" />

                    <!-- TextView for hidden text -->
                    <TextView
                        android:id="@+id/hiddenTextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="At Muramba Security &amp; Solutions, we understand the unique security requirements of individuals and organizations necessitating personalized protection. Our Body Guard Services are meticulously tailored to provide you with a discreet, professional, and reliable security detail capable of adapting to various environments and situations. Leveraging a team of highly trained and experienced professionals, we prioritize your safety, privacy, and peace of mind, offering bespoke security solutions designed to mitigate risks and ensure your well-being at all times."
                        android:textColor="#FF000000"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/textView2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="16dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <!-- Third CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/service3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:elevation="12dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                android:layout_gravity="center_horizontal">

                <!-- ConstraintLayout for the third CardView -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#304FFE"> <!-- Changed to wrap_content -->

                    <!-- ImageView -->
                    <ImageView
                        android:id="@+id/image_view3"
                        android:layout_width="126dp"
                        android:layout_height="95dp"
                        android:src="@drawable/secure13"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="visible" /> <!-- Initially visible -->

                    <!-- TextView for title -->
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Access Control Solutions"
                        android:textAllCaps="true"
                        android:textColor="#FF8BC34A"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/image_view3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="16dp" />

                    <!-- TextView for hidden text -->
                    <TextView
                        android:id="@+id/hiddenTextView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="At Muramba Security &amp; Solutions, we offer comprehensive access control solutions designed to safeguard your premises while providing seamless entry for authorized individuals. Our state-of-the-art access control systems integrate cutting-edge technology with user-friendly interfaces, ensuring robust security without compromising on convenience. From biometric systems to smart card readers, our solutions are tailored to meet the specific needs of your organization, enhancing security while enabling efficient and secure access management."
                        android:textColor="#FF000000"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/textView3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="16dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Fourth CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/service4"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:elevation="12dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                android:layout_gravity="center_horizontal"> <!-- Center horizontally -->

                <!-- ConstraintLayout for the fourth CardView -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#304FFE">

                    <!-- ImageView -->
                    <ImageView
                        android:id="@+id/image_view4"
                        android:layout_width="126dp"
                        android:layout_height="95dp"
                        android:src="@drawable/secure19"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="visible" />

                    <!-- TextView for title -->
                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Electronic Security System"
                        android:textAllCaps="true"
                        android:textColor="#FF8BC34A"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/image_view4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="16dp" />

                    <!-- TextView for hidden text -->
                    <TextView
                        android:id="@+id/hiddenTextView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="At Muramba Security &amp; Solutions, we recognize the evolving complexities of security challenges and the critical role that electronic systems play in safeguarding your assets and personnel. Our Electronic Security System solutions are meticulously designed to offer a comprehensive and integrated approach to security, leveraging advanced technology, and industry expertise. Whether you require intrusion detection, fire alarm systems, or integrated security management, we tailor our solutions to meet your specific security objectives, ensuring robust protection against potential threats."
                        android:textColor="#FF000000"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/textView7"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="16dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <!-- Fifth CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/service5"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:elevation="12dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                android:layout_gravity="center_horizontal"> <!-- Center horizontally -->

                <!-- ConstraintLayout for the fifth CardView -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#304FFE"> <!-- Changed to wrap_content -->

                    <!-- ImageView -->
                    <ImageView
                        android:id="@+id/image_view5"
                        android:layout_width="126dp"
                        android:layout_height="95dp"
                        android:src="@drawable/secure9"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="visible" /> <!-- Initially visible -->

                    <!-- TextView for title -->
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Armed Response"
                        android:textAllCaps="true"
                        android:textColor="#FF8BC34A"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/image_view5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="16dp" />

                    <!-- TextView for hidden text -->
                    <TextView
                        android:id="@+id/hiddenTextView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="At Muramba Security &amp; Solutions, we recognize the critical importance of swift, effective, and decisive action in addressing security threats and emergencies. Our Armed Response Services are meticulously designed to provide you with a rapid, professional, and comprehensive response to potential risks, ensuring the safety and security of your premises, assets, and personnel. Leveraging a team of highly trained and certified armed security professionals, we prioritize proactive monitoring, rapid intervention, and effective resolution of security incidents, offering peace of mind and robust protection against unforeseen threats."
                        android:textColor="#FF000000"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/textView5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="16dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>