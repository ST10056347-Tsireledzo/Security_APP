<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    tools:context=".Home">

    <!-- Top Header with Logo -->
    <ImageView
        android:id="@+id/companyLogo"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:src="@drawable/company"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Main Dashboard Grid -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="2"
        app:layout_constraintTop_toBottomOf="@id/companyLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Card 1 - com.example.muramba_2.Consult -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardConsult"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:elevation="12dp"
            app:cardCornerRadius="8dp">

            <!-- Content inside com.example.muramba_2.Consult Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/consult" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Messeges"
                    android:textAllCaps="true"
                    android:textColor="#FF8BC34A"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 2 - com.example.muramba_2.Connect -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardConnect"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:elevation="12dp"
            app:cardCornerRadius="8dp">

            <!-- Content inside com.example.muramba_2.Connect Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/connect" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connect"
                    android:textAllCaps="true"
                    android:textColor="#FF8BC34A"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 3 - About Us -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAboutUs"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:elevation="12dp"
            app:cardCornerRadius="8dp">

            <!-- Content inside About Us Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/about" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:textAllCaps="true"
                    android:textColor="#FF8BC34A"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 4 - Services -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardServices"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:elevation="12dp"
            app:cardCornerRadius="8dp">

            <!-- Content inside Services Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/about" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services"
                    android:textAllCaps="true"
                    android:textColor="#FF8BC34A"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 5 - Contact Us -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardContactUs"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:elevation="12dp"
            app:cardCornerRadius="8dp">

            <!-- Content inside Contact Us Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/contact" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textAllCaps="true"
                    android:textColor="#FF8BC34A"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 6 - Access Control -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAccessControl"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:elevation="12dp"
            app:cardCornerRadius="8dp">

            <!-- Content inside Access Control Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/control" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Access Control"
                    android:textAllCaps="true"
                    android:textColor="#FF8BC34A"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

    <!-- Circular Red Panic Button at the Bottom -->
    <ImageButton
        android:id="@+id/panicButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingTop="20dp"
        android:backgroundTint="#FF0000"
        android:scaleType="centerInside"
        android:src="@drawable/sos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
